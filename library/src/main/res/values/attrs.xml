<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="fab">
        <attr name="fabColor" format="color"/>
        <attr name="fabSize" format="enum">
            <enum name="mini" value="1"/>
            <enum name="normal" value="0"/>
        </attr>
        <attr name="fabMenu" format="reference"/>

        <attr name="fabGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
        </attr>
    </declare-styleable>

    <item type="id" name="fab__main_container"/>
    <item type="id" name="fab__action_button"/>
</resources>